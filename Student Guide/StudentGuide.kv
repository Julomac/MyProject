ScreenManager:
    HomePage:
    Building:
    RoomPage:


<HomePage>:
    name: "home"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Albertus Magnus"
            font_size: (.11*self.width)
            size_hint: (1,.20)

        GridLayout:
            cols: 2
            spacing: dp(5)
            padding: dp(10)
            Button:
                text: "Find your classes!"
                font_size: .1*self.width
                on_press: app.root.current = "building"
            Button:
                text: "Find services"
                font_size: .1*self.width
            Button:
                text: "Info about the school"
                font_size: .1*self.width


<Building>
    name: "building"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: dp(25)
            size_hint: (1,.25)
            Button:
                text: "Back"
                font_size: .35*self.width
                on_press: app.root.current = 'home'

                size_hint: (.25, 1)

            Label:
                text: "Albertus Magnus"
                font_size: .11*self.width

        Label:
            text: "What building is the class in ?"
            size_hint: (1, .15)
            font_size: .07*self.width
        GridLayout:
            cols: 2
            spacing: dp(20)
            padding: dp(20)
            Button:
                text: "Building 1!"
                font_size: .1*self.width
                on_press: app.root.current = 'room'
            Button:
                text: "Building 2"
                font_size: .1*self.width
            Button:
                text: "Building 3"
                font_size: .1*self.width





<RoomPage>:
    name: "room"

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: dp(25)
            size_hint: (1,.25)
            Button:
                text: "Back"
                font_size: .07*self.width
                on_press: app.root.current = 'home'

                size_hint: (.25, 1)

            Label:
                text: "Albertus Magnus"
                font_size: .11*self.width

        Label:
            text: "What is the room that your are looking for ?"
            size_hint: (1, .15)
            font_size: .11*self.width
        GridLayout:
            cols: 2
            spacing: dp(20)
            padding: dp(20)
            Button:
                text: "Room 203"
                font_size: .1*self.width
            Button:
                text: "Room 305"
                font_size: .1*self.width
            Button:
                text: "Room 315"
                font_size: .1*self.width
